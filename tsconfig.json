{
  "compilerOptions": {
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": [
      "vitest",
      "node"
    ],
    "paths": {
      "@doyolabs/api-client-core": [
        "./packages/core/src/index"
      ],
      "@doyolabs/api-client-pinia": [
        "./packages/pinia/src/index"
      ],
      "@doyolabs/api-client-nuxt": [
        "./packages/nuxt/src/index"
      ],
    }
  },
  "exclude": [
    "**/dist/**",
    "**/.nuxt/**",
    "**/nuxt.d.ts",
    "**/playground/**",
    "**/test/fixtures/**",
    "packages/nuxt"
  ]
}
